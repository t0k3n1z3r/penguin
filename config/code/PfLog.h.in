#ifndef _PF_LOG_H_
#define _PF_LOG_H_

/**
********************************************************************************
* @enum         PF_LOG_LEVEL
* @brief        This enum defines all possible debug levels. If project was
*               compiled with MAX degug level PF_LOG_LEVEL_ERROR, it means
*               that only ERROR messages will be printed to the output buffer.
********************************************************************************
*/
typedef enum
{
    /**
    ****************************************************************************
    * @brief    Error level message descriptor
    ****************************************************************************
    */
    PF_LOG_LEVEL_ERROR    = @PF_LOG_LEVEL_ERROR_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Warning level message descriptor
    ****************************************************************************
    */
    PF_LOG_LEVEL_WARNING  = @PF_LOG_LEVEL_WARNING_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Information level message descriptor
    ****************************************************************************
    */
    PF_LOG_LEVEL_INFO     = @PF_LOG_LEVEL_INFO_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Debug level message descriptor
    ****************************************************************************
    */
    PF_LOG_LEVEL_DEBUG    = @PF_LOG_LEVEL_DEBUG_GENERATED@,
    PF_LOG_LEVEL_MAX      = PF_LOG_LEVEL_DEBUG

} PF_LOG_LEVEL;

/**
********************************************************************************
* @enum         PF_LOG_CLASS
* @brief        This enum defines all possible debug classes. For each log
*               message will be printed a tag which is mapped to corresponding
*               debug class.
********************************************************************************
*/
typedef enum
{
    /**
    ****************************************************************************
    * @brief    Undefined log class
    * @note     Enabled by default
    ****************************************************************************
    */
    PF_LOG_CLASS_UNDEFINED = @PF_LOG_CLASS_UNDEFINED_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Core component log class
    ****************************************************************************
    */
    PF_LOG_CLASS_CORE      = @PF_LOG_CLASS_CORE_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Propotocol component log class
    ****************************************************************************
    */
    PF_LOG_CLASS_PROTOCOL  = @PF_LOG_CLASS_PROTOCOL_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Transport component log class
    ****************************************************************************
    */
    PF_LOG_CLASS_TRANSPORT = @PF_LOG_CLASS_TRANSPORT_GENERATED@,

    /**
    ****************************************************************************
    * @brief    Penguin component log class
    ****************************************************************************
    */
    PF_LOG_CLASS_PENGUIN   = @PF_LOG_CLASS_PENGUIN_GENERATED@,
    PF_LOG_CLASS_MAX          = PF_LOG_CLASS_PENGUIN
    
} PF_LOG_CLASS;

#endif  /* !_PF_LOG_H_ */
